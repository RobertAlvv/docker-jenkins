pipeline {
    agent any
    
    stages {

        stage("verify tooling"){
            steps{
                sh '''
                docker info
                docker version
                docker compose version
                curl --version
                jq --version
                '''
            }
        }

        stage('Build') {
            steps {
                sh 'echo "Compiling code..."'
                sh 'docker compose -f /week_third/docker-compose.yml up -d --no-color --wait'
                sh 'docker compose ps'
            }
        }
        
        stage('Test') {
            steps {
                sh 'echo "Running tests..."'
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'echo "Deploying code..."'
            }
        }
    }
}