pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                sh 'echo "Compiling code..."'
                sh 'mvn compile'
            }
        }
        
        stage('Test') {
            steps {
                sh 'echo "Running tests..."'
                sh 'mvn test'
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'echo "Deploying code..."'
                sh 'mvn deploy'
            }
        }
    }
}